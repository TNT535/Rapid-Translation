<Window x:Class="RapidTranslationWPF_MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RapidTranslationWPF_MVVM"
        xmlns:vm="clr-namespace:RapidTranslationWPF_MVVM.ViewModels"
        xmlns:uc="clr-namespace:RapidTranslationWPF_MVVM.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1200" WindowState="{Binding CaptureObject.CaptureWindowState, Mode=TwoWay}">
    <Window.DataContext>
        <vm:NavigationViewModel/>
    </Window.DataContext>

    <Grid>
        <DockPanel>
            <Grid DockPanel.Dock="Left" Margin="0 10 46 0">
                <uc:NavigationListUC DataContext="{Binding }"></uc:NavigationListUC>
            </Grid>
            <Grid DockPanel.Dock="Top" HorizontalAlignment="Right" Margin="0 5 5 5">
                <uc:UserInfoUC></uc:UserInfoUC>
            </Grid>

            <DockPanel DockPanel.Dock="Bottom">
                <!--Content of each page here-->
                <ContentControl x:Name="Pages" Content="{Binding CurrentView}"/>
            </DockPanel>

        </DockPanel>
    </Grid>
</Window>
