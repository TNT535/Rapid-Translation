        <!-- Area Chart in Code Behind -->
        <DVC:Chart Canvas.Top="80" Canvas.Left="10" Name="mcChart" 
           Width="500" Height="300" 
           Background="#F5F5F5" Foreground="DarkBlue" 
           Title="Area Chart" LegendTitle="Hiring">

            <DVC:Chart.Palette>
                <DV:ResourceDictionaryCollection>
                    <ResourceDictionary>
                        <Style x:Key="DataPointStyle" TargetType="DVC:AreaDataPoint">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush MappingMode="Absolute">
                                        <GradientStop Color="Red" Offset="0.2"/>
                                        <GradientStop Color="Green" Offset="0.45"/>
                                        <GradientStop Color="Blue" Offset="0.55"/>
                                        <GradientStop Color="#0F9D58" Offset="0.8"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ResourceDictionary>
                </DV:ResourceDictionaryCollection>
            </DVC:Chart.Palette>


            <DVC:Chart.Axes>
                <!-- Add Horizontal and Vertical Axes-->
                <DVC:LinearAxis 
                    Orientation="Y"
                    Title="Count search"
                    Interval="40"
                    Foreground="Black"  
                    Background="Transparent"
                    FontFamily="Georgia"
                    FontSize="14"
                    FontWeight="Bold"
                    
                />

                <DVC:LinearAxis 
                    Orientation="X"
                    Title="Day"
                    Foreground="Black"  
                    Background="#F5F5F5" 
                    FontFamily="Georgia"
                    FontSize="14"
                    FontWeight="Bold"
                    Location="Bottom"
                    Interval="30"
                />
            </DVC:Chart.Axes>

            <!--<DVC:Chart.Series>
                <DVC:AreaSeries 
                    Title="Hiring by Quarter"
                    IndependentValuePath="Key"
                    DependentValuePath="Value">
                </DVC:AreaSeries>
            </DVC:Chart.Series>-->

            <DVC:Chart.Series>
                <DVC:AreaSeries Title="Fruits" 
                ItemsSource="{StaticResource DayCountSearchCollection}"
                IndependentValueBinding="{Binding Path=Day}"
                DependentValueBinding="{Binding Path=Count}">
                </DVC:AreaSeries>
            </DVC:Chart.Series>

        </DVC:Chart>

