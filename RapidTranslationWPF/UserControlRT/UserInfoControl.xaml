<UserControl x:Class="RapidTranslationWPF.UserControlRT.UserInfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RapidTranslationWPF.UserControlRT"
             mc:Ignorable="d" 
             d:DesignHeight="42" d:DesignWidth="162">
        <Border BorderBrush="#0F9D58" BorderThickness="1" CornerRadius="10" Padding="5" HorizontalAlignment="Right" Width="162">
            <DockPanel HorizontalAlignment="Right">
                <Image x:Name="Avatar"  DockPanel.Dock="Left" Source="/Resources/avatar.png" Width="30" Height="30" ></Image>
                <TextBlock DockPanel.Dock="Top" Text="TRINEWTON">

                </TextBlock>
                <ProgressBar DockPanel.Dock="Bottom" Width="120" Height="10" Minimum="0" Maximum="100" Value="75" Foreground="#FFF4B400" Background="#D9D9D9">

                </ProgressBar>
            </DockPanel>

        </Border>
</UserControl>
